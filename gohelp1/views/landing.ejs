 /* ============ Waves shape end========= */

  /* ============== Service Section start================== */
  .services-section {
            padding: 0 0 4rem 0;
            background-color: white;
        }

        .wave-background {
            height: 200px;
            background-color: #ff8c00;
            position: relative;
            overflow: hidden;
        }

        .wave-background::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 200px;
            background-image: 
                radial-gradient(circle at 50% 100%, white 50%, transparent 51%),
                radial-gradient(circle at 50% 100%, rgba(255, 140, 0, 0.3) 40%, transparent 41%);
            background-size: 200% 100%;
            background-position: 0% 0%;
            animation: waveAnimation 10s linear infinite;
        }

        @keyframes waveAnimation {
            0% { background-position: 0% 0%; }
            100% { background-position: 200% 0%; }
        }

        .services-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
        }

        .services-header {
